import pandas as pd
import matplotlib.pyplot as plt

def xy(cesta, sloupec_x, sloupec_y, label=None):
    
    df = pd.read_excel(cesta)
    
    
    df.columns = df.columns.str.strip()
    
  
    plt.plot(df[sloupec_x], df[sloupec_y], label=label if label else sloupec_y)


xy(r"C:\Users\Zdeněk Beránek\Desktop\phytontabulky\tabulka 1.xlsx", "Měsíc", "Hodnota", label="Průměrná hrubá mzda v ČR (Tisíce Kč)")
xy(r"C:\Users\Zdeněk Beránek\Desktop\phytontabulky\tabulka 2.xlsx", "Měsíc", "Hodnota", label="Přírust inflace v ČR (Meziroční změna v %)")
plt.xticks(fontsize=12, fontweight="bold", rotation=45)

plt.title("Porovnání Hrubé mzdy v ČR a Míry inflace v ČR")
plt.xlabel("Měsíc")
plt.ylabel("Hodnota")
plt.legend(loc="upper left")
plt.grid(True)
plt.show()
